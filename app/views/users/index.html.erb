<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>User name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Target</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.target %></td>
        <td><%= user.rate %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Get an XML QRDA', user_feed_path(user) %></td>	<!--********this might not work -->
 	    <td><%= link_to 'Get a PDF of a QRDA', user_download_pdf_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

